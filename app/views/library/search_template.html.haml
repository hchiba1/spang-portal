!!!
= content_for :path do
  .small
    %a{ href: root_path }
      = Settings.site_name
    >>
    = "Search Results"
%p
  %h1
    = "Search Results for #{@query}"
  .content_wrapper
    - if @template_groups.empty?
      %h2
        No results found
    - @template_groups.each do |lib, templates|
      %h2
        %a{ href: lib }
          = "#{lib}/"
      .indented
        - templates.each do |template|
          %a{ href: template[:path] }
            = template[:name]
          %br
          - if template[:description]
            .indented
              = "Description: #{template[:description]}"
          - if template[:parameters].length > 0
            .indented
              = "(ex: #{template[:parameters].join(', ')})"
          %br
